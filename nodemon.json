{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "docs",
        "app/public",
        "scripts",
        "run",
        "logs",
        "test"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "watch": [
        "*.*"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json njk"
}
